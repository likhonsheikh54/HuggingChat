{
  "version": 2,
  "framework": "svelte",
  "buildCommand": "bun run build",
  "installCommand": "bun install --frozen-lockfile",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node@3"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "github": {
    "enabled": true,
    "silent": true
  }
}
